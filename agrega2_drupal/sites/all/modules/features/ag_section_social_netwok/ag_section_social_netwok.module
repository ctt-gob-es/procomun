function _getFaqNid() {
  $node_url = drupal_lookup_path('source', 'comunidades/ayuda-y-faqs');
  $args = explode('/', $node_url);
  if ($args[0] == 'node') {
    return $args[1];
  }
  else {
    return 0;
  }
}

